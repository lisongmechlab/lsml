<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>

<StackPane stylesheets="@BaseStyle.css" xmlns="http://javafx.com/javafx/8.0.301" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.lisoft.lsml.view_fx.controllers.MainWindowController">
    <BorderPane fx:id="content" minHeight="768.0">
        <top>
            <HBox fx:id="titleBar" alignment="CENTER" BorderPane.alignment="CENTER">
                <styleClass>
                    <String fx:value="header" />
                    <String fx:value="default-spacing" />
                    <String fx:value="default-padding" />
                </styleClass>
                <Region minHeight="-Infinity" minWidth="-Infinity">
                    <styleClass>
                        <String fx:value="svg-logo" />
                        <String fx:value="logo" />
                    </styleClass>
                </Region>
                <Label minHeight="-Infinity" minWidth="-Infinity" styleClass="h1" text="Li Song Mechlab" />
                <Region prefWidth="75.0" />
                <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#openNewMechOverlay" styleClass="accent-button" text="New 'Mech">
                    <tooltip>
                        <Tooltip text="[Cntrl+N] Opens the chassis selector window where you can find a chassis based on your criteria." />
                    </tooltip>
                </Button>
                <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#importMechString" styleClass="accent-button" text="Import 'Mech">
                    <tooltip>
                        <Tooltip text="[Cntrl+D] Opens the import 'Mech dialog." />
                    </tooltip>
                </Button>
                <StackPane alignment="CENTER_RIGHT">
                    <TextField fx:id="searchField" prefWidth="250.0" promptText="Search...">
                        <tooltip>
                            <Tooltip text="[Cntrl+F] You can search by name, faction, tonnage and quirks." />
                        </tooltip>
                    </TextField>
                    <Region maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
                        <styleClass>
                            <String fx:value="svg-search" />
                            <String fx:value="icon-search" />
                        </styleClass>
                        <StackPane.margin>
                            <Insets right="3.0" />
                        </StackPane.margin>
                    </Region>
                </StackPane>
                <Region HBox.hgrow="ALWAYS" />
                <HBox styleClass="default-spacing">
                    <Button focusTraversable="false" mnemonicParsing="false" onAction="#windowIconify" styleClass="decor-button">
                        <graphic>
                            <Group>
                                <Region styleClass="decor-iconify" />
                            </Group>
                        </graphic>
                    </Button>
                    <Button focusTraversable="false" mnemonicParsing="false" onAction="#windowMaximize" styleClass="decor-button">
                        <graphic>
                            <Group>
                                <Region styleClass="decor-max" />
                            </Group>
                        </graphic>
                    </Button>
                    <Button focusTraversable="false" mnemonicParsing="false" onAction="#windowClose" styleClass="decor-button">
                        <graphic>
                            <Group>
                                <Region styleClass="decor-close" />
                            </Group>
                        </graphic>
                    </Button>
                </HBox>
            </HBox>
        </top>
      <center>
         <TabPane rotateGraphic="true" side="LEFT" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
           <tabs>
             <Tab fx:id="loadoutsTab" text="Loadouts">
                  <graphic>
                           <Region>
                               <styleClass>
                                   <String fx:value="svg-mech" />
                                   <String fx:value="icon" />
                               </styleClass>
                           </Region>
                  </graphic>
             </Tab>
             <Tab fx:id="chassisTab" text="Chassis">
                  <graphic>
                           <Region>
                               <styleClass>
                                   <String fx:value="svg-mech" />
                                   <String fx:value="icon" />
                               </styleClass>
                           </Region>
                  </graphic>
             </Tab>
               <Tab fx:id="weaponsTab" text="Weapons">
                  <graphic>
                           <Region>
                               <styleClass>
                                   <String fx:value="svg-weapons" />
                                   <String fx:value="icon" />
                               </styleClass>
                           </Region>
                  </graphic>
               </Tab>
               <Tab fx:id="importExportTab" text="Import/Export">
                  <graphic>
                           <Region>
                               <styleClass>
                                   <String fx:value="svg-arrows" />
                                   <String fx:value="icon" />
                               </styleClass>
                           </Region>
                  </graphic>
               </Tab>
               <Tab fx:id="settingsTab" text="Settings">
                  <graphic>
                           <Region>
                               <styleClass>
                                   <String fx:value="svg-cog" />
                                   <String fx:value="icon" />
                               </styleClass>
                           </Region>
                  </graphic>
               </Tab>
           </tabs>
         </TabPane>
      </center>
    </BorderPane>
</StackPane>
