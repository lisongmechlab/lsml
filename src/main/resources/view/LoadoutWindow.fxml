            </TreeTableView>
        </left>
        <right>
            <ScrollPane fx:id="infoScrollPane" fitToWidth="true" focusTraversable="false" hbarPolicy="NEVER" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER">
                <styleClass>
                    <String fx:value="material" />
                    <String fx:value="info-pane" />
               <String fx:value="default-padding" />
               <String fx:value="small-spacing" />
                </styleClass>
            </ScrollPane>
        </right>
      <bottom>
         <Pane maxHeight="1.0" minHeight="1.0" prefHeight="1.0" BorderPane.alignment="CENTER" />
      </bottom>
